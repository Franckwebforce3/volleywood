{% extends 'base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}
    <h1>Article index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Categorie</th>
                <th>Description</th>
                <th>Photo</th>
                <th>Photo2</th>
                <th>Photo3</th>
                <th>Photo4</th>
                <th>DatePublication</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.titre }}</td>
                <td>{{ article.categorie }}</td>
                <td>{{ article.description }}</td>
                <td><img src="{{ asset('assets/upload/{{ article.photo }}') }}" alt="image d'article"></td>
                <td>{{ article.photo2 }}</td>
                <td>{{ article.photo3 }}</td>
                <td>{{ article.photo4 }}</td>
                <td>{{ article.datePublication ? article.datePublication|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('article_show', {'id': article.id}) }}">show</a>
                    <a href="{{ path('article_edit', {'id': article.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('article_new') }}">Nouvel article</a>
{% endblock %}
