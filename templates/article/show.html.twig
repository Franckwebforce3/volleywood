{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <!-- Breadcrumb Area Start -->
    <section class="breadcrumb-area blog bg-img bg-overlay jarallax" style="background-image: url({{ asset('assets/img/bg-img/18.jpg') }});">
        <div class="container h-100">
            <div class="row h-100 align-items-center">
                <div class="col-12">
                    <div class="breadcrumb-content text-center">
                        <a class="post-catagory">Article</a>
                        <h2 class="page-title">{{ article.titre }}</h2>
                        <div class="post-meta">
                            <a href="https://www.instagram.com/frankgouki/" class="post-author">FranckD.</a>
                            <a href="#" class="post-date">{{ article.datePublication ? article.datePublication|date('Y-m-d') : '' }}</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Breadcrumb Area End -->

    <!-- Blog Details Area Start -->
    <div class="alime--blog-area section-padding-80">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-12 col-lg-10">
                    <!-- Blog Details Text -->
                    <div class="blog-details-text">
                        <p>{{ article.categorie }}</p>
                        <p>{{ article.description }}</p>

                        <div class="my-5">
                            <div class="row">
                                <div class="col-12 col-lg-8">
                                    <div class="row">
                                        <div class="col-12 col-sm-6">
                                            <img class="mb-10" src="{{ asset('assets/img/article/'~article.photo) }}" alt="">
                                        </div>
                                        <div class="col-12 col-sm-6">
                                            <img class="mb-10" src="{{ asset('assets/img/article/'~article.photo2) }}" alt="">
                                        </div>
                                        <div class="col-12">
                                            <img class="mb-10" src="{{ asset('assets/img/article/'~article.photo3) }}" alt="">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 col-lg-4">
                                    <img class="mb-10" src="{{ asset('assets/img/article/'~article.photo4) }}" alt="">
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Post Author Area -->
                    <div class="post-author-area mt-50 d-flex align-items-center justify-content-between">
                        <ul class="popular-tags">
                            <li><a class="badges-btn">BEACH-VOLLEY</a></li>
                            <li><a class="badges-btn">MARSEILLE</a></li>
                            <li><a class="badges-btn">VOLLEYBALL</a></li>
                        </ul>

                        <!-- Share Info -->
                        <div class="post-social-info d-flex align-items-center">
                            <p>Nous suivre :</p>
                            <a target="_blank" href="https://www.facebook.com/VolleywoodMarseille/"><i class="ti-facebook" aria-hidden="true"></i></a>
                            <a target="_blank" href="https://twitter.com/goukinou2"><i class="ti-twitter-alt" aria-hidden="true"></i></a>
                            <a target="_blank" href="https://www.youtube.com/user/goukinou2"><i class="fab fa-youtube" aria-hidden="true"></i></a>
                            <a target="_blank" href="https://www.instagram.com/frankgouki/"><i class="fab fa-instagram" aria-hidden="true"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Blog Details Area End -->
    
    {# <button class="btn alime-btn btn-2 mt-15">
        <a href="{{ path('article_index') }}">Liste des articles</a>
    </button>

    <button class="btn alime-btn btn-2 mt-15">
        <a href="{{ path('article_edit', {'id': article.id}) }}">Modifier</a>
    </button> #}
    
    {# {{ include('article/_delete_form.html.twig') }} #}
    

    
{% endblock %}
