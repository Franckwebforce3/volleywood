{% extends 'base.html.twig' %}

{% block title %}Edit Article{% endblock %}

{% block body %}
    <!-- Breadcrumb Area Start -->
    <section class="breadcrumb-area bg-img bg-overlay jarallax" style="background-image: url({{ asset('assets/img/bg-img/38.jpg') }});">
        <div class="container h-100">
            <div class="row h-100 align-items-center">
                <div class="col-12">
                    <div class="breadcrumb-content text-center">
                        <h5 class="page-title">Administration</h5>
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb justify-content-center">
                                <li class="breadcrumb-item"><a href="{{ path('public') }}"><i class="icon_house_alt"></i> Accueil</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Modifier un article</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <h1>Edit Article</h1>

    {{ form_start(form) }}
    <div class="row">
        <div class="col-12">
            {{ form_row(form.newApercu, { 'label': 'Aper√ßu'}) }}
        </div>
        <div class="col-12">
            {{ form_row(form.titre) }}
        </div>
        <div class="col-12 col-md-6">
            {{ form_row(form.description) }}
        </div>
        <div class="col-12 col-md-6">
            {{ form_row(form.categorie) }}
        </div>
        <div class="col-12 col-md-3">
            {{ form_row(form.newPhoto, { 'label': 'Photo 1'}) }}
        </div>
        <div class="col-12 col-md-3">
            {{ form_row(form.newPhoto2, { 'label': 'Photo 2'}) }}
        </div>
        <div class="col-12 col-md-3">
            {{ form_row(form.newPhoto3, { 'label': 'Photo 3'}) }}
        </div>
        <div class="col-12 col-md-3">
            {{ form_row(form.newPhoto4, { 'label': 'Photo 4'}) }}
        </div>
        <div class="col-6">
            <button class="btn alime-btn btn-2 mt-15">{{ button_label|default("Modifier l'article") }}</button>
        </div>
        <div>
            <button class="btn alime-btn btn-2 mt-15"><a href="{{ path('admin') }}">Retour</a></button>
        </div>
    </div>
{{ form_end(form) }}

    
{% endblock %}
