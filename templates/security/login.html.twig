{% extends 'base.html.twig' %}

{% block title %}Connectez-vous !{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}




    <!-- Breadcrumb Area Start -->
    <section class="breadcrumb-area bg-img bg-overlay jarallax" style="background-image: url(assets/img/bg-img/38.jpg);">
        <div class="container h-100">
            <div class="row h-100 align-items-center">
                <div class="col-12">
                    <div class="breadcrumb-content text-center">
                        <h2 class="page-title">Connexion</h2>
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb justify-content-center">
                                <li class="breadcrumb-item"><a href="index.html"><i class="icon_house_alt"></i> Accueil</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Connexion</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Comment Area Start -->
    <div class="section-padding-80">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-9">
                    <!-- connection -->
                    <div class="alime-contact-form mt-50">
                        <h4 class="mb-30">Connexion</h4>
                        <div class="row">
                            <div class="col-12 col-md-6">
                                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control mb-30" required placeholder="Entrez votre email">
                            </div>
                            <div class="col-12 col-md-6">
                                <input type="password" name="password" id="inputPassword" class="form-control mb-30" required placeholder="Votre mot de passe">
                            </div>
                            <div class="col-12 col-md-6">
                                <button type="submit" class="btn alime-btn btn-2 mt-15">Connectez-vous</button>
                            </div>
                            <div class="col-12 col-md-6">
                                <a class="btn alime-btn btn-2 mt-15" href="{{ path('public') }}">Mot de passe oubli√© ?</a>
                            </div>
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}
</form>
{% endblock %}
