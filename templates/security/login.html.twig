{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
    <label for="inputEmail">Email</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
    <label for="inputPassword">Password</label>
    <input type="password" name="password" id="inputPassword" class="form-control" required>

    <input type="hidden" name="_csrf_token"
            value="{{ csrf_token('authenticate') }}"
    >


    <!-- connection -->
    <div class="alime-contact-form mt-50">
        <h4 class="mb-30">Connexion</h4>
        <!-- Form -->
        <form action="traitement.php" method="POST">
            <div class="row">
                <div class="col-12 col-md-6">
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control mb-30" required placeholder="Entrez votre email">
                </div>
                <div class="col-12 col-md-6">
                    <input type="password" name="password" id="inputPassword" class="form-control mb-30" required placeholder="Votre mot de passe">
                </div>
                <div class="col-12">
                    <button type="submit" class="btn alime-btn btn-2 mt-15">Connectez-vous</button>
                </div>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            </div>
        </form>
    </div>
    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    <button class="btn btn-lg btn-primary" type="submit">
        Sign in
    </button>
</form>
{% endblock %}
