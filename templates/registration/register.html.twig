{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <!-- Breadcrumb Area Start -->
    <section class="breadcrumb-area bg-img bg-overlay jarallax" style="background-image: url({{ asset('assets/img/bg-img/38.jpg') }});">
        <div class="container h-100">
            <div class="row h-100 align-items-center">
                <div class="col-12">
                    <div class="breadcrumb-content text-center">
                        <h2 class="page-title">Connexion</h2>
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb justify-content-center">
                                <li class="breadcrumb-item"><a href="{{ path('public') }}"><i class="icon_house_alt"></i> Accueil</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Inscription</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <div class="comment-area section-padding-80">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-9">
                    <!-- Comments Area -->
                    <div class="comment_area clearfix">
                        <h4 class="mb-30"></h4>
                        <ol>
                            <!-- Leave A Reply -->

                            <div class="alime-contact-form mt-50">
                                <h4 class="mb-30">Cr√©er un compte</h4>
                                {# {% for message in app.flashes('success') %}
                                    <div class="flash-notice">
                                        {{ message }}
                                    </div>
                                {% endfor %} #}
                                <!-- Form -->
                                {{ form_start(registrationForm) }}
                                    <div class="row">
                                        <div class="col-12 col-md-6">
                                            {{ form_row(registrationForm.pseudo) }}
                                        </div>
                                        <div class="col-12 col-md-6">
                                            {{ form_row(registrationForm.email) }}
                                        </div>
                                        <div class="col-12 col-md-6">
                                            {{ form_row(registrationForm.password) }}
                                        </div>
                                        <div class="col-12 col-md-6">
                                            {{ form_row(registrationForm.confirmPassword) }}
                                        </div>
                                        <div class="col-12">
                                            {{ form_row(registrationForm.avatar) }}
                                        </div>
                                        <div class="col-12 col-md-6">
                                            {{ form_row(registrationForm.cp) }}
                                        </div>
                                        <div class="col-12 col-md-6">
                                            {{ form_row(registrationForm.ville) }}
                                        </div>
                                        <div class="col-12">
                                            {{ form_row(registrationForm.adresse) }}
                                        </div>
                                        <div class="col-12">
                                            <button class="btn alime-btn btn-2 mt-15">Je m'inscris</button>
                                        </div>
                                    </div>
                                {{ form_end(registrationForm) }}
                            </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}



